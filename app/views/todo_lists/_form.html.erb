          <%= form.text_field :title, class: "input", placeholder: "Enter a title..." %>
        </div>
        <div class="media-right">
          <%= form.submit action_name.capitalize, 
          class: "button is-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>